{
  "name": "petio",
  "private": true,
  "author": "Petio Team",
  "license": "MIT",
  "bin": "./dist/api/index.js",
  "workspaces": [
    "pkg/api",
    "pkg/frontend",
    "pkg/admin"
  ],
  "scripts": {
    "prepare": "is-ci || husky install",
    "release": "npx pkg . --no-bytecode --public-packages \"*\" --public"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^16.2.1",
    "@trivago/prettier-plugin-sort-imports": "^3.2.0",
    "commitlint": "^17.0.0",
    "husky": "^8.0.1",
    "prettier": "^2.6.2"
  },
  "pkg": {
    "scripts": [],
    "assets": [
      "./pkg/frontend/build/**/*"
    ],
    "targets": [
      "node18-alpine-arm64",
      "node18-alpine-x64",
      "node18-linux-arm64",
      "node18-linux-x64",
      "node18-linuxstatic-arm64",
      "node18-linuxstatic-x64",
      "node18-windows-x64",
      "node18-windows-arm64"
    ],
    "outputPath": "dist/releases"
  },
  "packageManager": "yarn@3.2.1"
}
