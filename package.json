{
  "name": "petio",
  "private": true,
  "author": "Petio Team",
  "license": "MIT",
  "bin": "./dist/server/app.js",
  "workspaces": [
    "server",
    "web"
  ],
  "scripts": {
    "prepare": "is-ci || husky install",
    "pkg": "npx @yao-pkg/pkg . --no-bytecode --public-packages \"*\" --public"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "husky": "^9.0.11",
    "prettier": "^3.3.1"
  },
  "pkg": {
    "scripts": [],
    "assets": [
      "./dist/web/**/*"
    ],
    "targets": [
      "latest-alpine-arm64",
      "latest-alpine-x64",
      "latest-linux-arm64",
      "latest-linux-x64",
      "latest-linuxstatic-arm64",
      "latest-linuxstatic-x64",
      "latest-windows-x64",
      "latest-windows-arm64"
    ],
    "outputPath": "dist/binaries"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/github",
        {
          "assets": [
            "dist/binaries/**"
          ]
        }
      ]
    ]
  },
  "packageManager": "yarn@3.2.1"
}
